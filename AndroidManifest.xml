    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />                              
            </intent-filter>
        </activity>
        <activity android:name="EditNodeActivity" android:theme="@style/AppThemeEmptyActionBar"></activity>
        <activity android:name=".TestingActivity" android:label="@string/title_activity_test"></activity>
    </application>

</manifest>